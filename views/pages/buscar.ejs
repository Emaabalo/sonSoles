<!DOCTYPE html>
<html>

<head>
  <title>Son Soles</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link  rel="icon"   href="https://raw.githubusercontent.com/Emaabalo/sonSoles/main/public/images/sol.png" type="image/png" />

</head>

<body>
  
  <header>
    <h1 class="h1Principal">busquedas</h1>
    <nav>
      <%- include('../partials/nav.ejs') %>    
    </nav>
  </header>


  <main>
    <%- include('../partials/filtros.ejs') %>

    <div class="baul">
      <ul class="prendasTodas">
        <% results.forEach(results=> { %>
          <li class="lista_item">
            <a href="<%= results.idPrenda %>" class="prendas">
              <img src="<%= results.imagen %>" alt="" class="imagen">
              <h2 class="precio"> $ <%= results.precio %> </h2>
            </a>
          </li>
        <% }) %>
      </ul>
    </div>

    <%- include('../partials/vidriera.ejs') %>

  </main>


  <section>
    <%- include('../partials/novedades.ejs') %>
  </section>


  <footer>
    <%- include('../partials/footer.ejs') %>
  </footer>

</body>

</html>